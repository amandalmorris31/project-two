    <div class="mx-auto order-0">
        <a href="/" class="navbar-brand mx-auto mb-0 h1">&lt;Code Connect/&gt;</a>
    </div>
    <div class="navbar-nav-scroll justify-content-end">
        <ul class="nav navbar-nav">
            <li class="nav-item ml-auto">
                <a class="nav-link text-white p-3" id="profile" href="#">My Profile</a>
            </li>
        </ul>
    </div>
</nav>

<main class="container">
    <div class="columns mt-4">
        <div class="column">
            <div class="card">
                <h3 class="h3 mt-3 m-auto">What connection would you like to make today?</h2>
                    <div class="card-content has-text-centered">
                        {{!-------begginning of form---------}}
                        <form class="new-project">
                            {{!-------project title---------}}
                            <div class="form-group mx-auto">
                                <input type="text" class="form-control" id="project-title" placeholder="Title" />
                            </div>
                            {{!-------project details---------}}
                            <div class="form-group mx-auto">
                                <textarea class="form-control" id="project-details" rows="3"
                                    placeholder="Details"></textarea>
                            </div>
                            {{!-------link---------}}
                            <div class="form-group mx-auto">
                                <input type="text" class="form-control" id="project-link"
                                    placeholder="Link (optional)" />
                            </div>

                            <button class="btn btn-success mt-3" id="post-project" type="submit">
                                Connect!
                            </button>
                        </form>
                        {{!-------end of form---------}}

                    </div>
            </div>
        </div>
    </div>

    {{!------------------beginning of Projects Cards------------------------}}
    <div class="columns is-multiline my-auto">
        {{#each projects}}
        {{> projects/project-block}}
        {{/each}}
    </div>
    {{!------------------End of Projects Cards------------------------}}

</main>

{{!-------footer---------}}
